<% if @cart_items %>
  <% @cart_items.each do |cart_item| %>
    <div class="cart-item">
      <div class="item">
        <%= cart_item.name %>
      </div>
      <div class="quantity">
        <%= cart_item.quantity %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>Your cart is empty!</p>
<% end %>
